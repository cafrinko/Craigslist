<form>
  <div class="form-group new-form">
    <label for="title">Title Your Post</label>
    {{input value=title id="title"}}
  </div>

  <div class="form-group new-form">
    <label for="body">Description of Item</label>
    {{textarea value=body id="body"}}
  </div>
  <div class="form-group new-form">
    <label for="price">Desired Price</label>
    {{input value=price id="price"}}
  </div>
  <div class="form-group new-form">
    <label for="">Location</label>
    {{input value=location id="location"}}
  </div>
  <div class="form-group new-form">
    <label for="image">Image</label>
    {{input value=image id="image"}}
  </div>
  <div class="form-group new-form">
    <label for="date">Today's Date</label>
    {{input value=date id="date"}}
  </div>
  <div class="form-group new-form">
    <label for="type">Type of Listing</label>
    {{input value=type id="type"}}
  </div>
  <div class="form-group new-form">
    <label for="category">Category</label>
    {{input value=category id="category"}}
  </div>
  <div class="form-group new-form">
    <label for="email">Your Email</label>
    {{input value=email id="email"}}
  </div>
  <button {{action 'saveFromFunction'}}>Submit</button>
</form>
